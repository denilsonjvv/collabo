<% include ../partials/header %>

<div class="container">
  <span class="digit">ID <%= project.id %></span>
  <div class="greybox">
    <form action="/p/<%= project._id %>?_method=PUT" method="POST">
      <div class="block">
          <label for="title">Title</label>
          <input type="text" id="title" name="project[title]" aria-describedby="title" value="<%= project.title %>">
      </div>
      <div class="block">
        <label for="description">Description:</label>
        <textarea type="text" id="description" name="project[description]"><%= project.description %></textarea>
      </div>
      <button class="btnlink submitBtn">Submit</button>
    </form>
  </div>
</div>

<% include ../partials/footer %>
